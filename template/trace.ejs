<html lang="en">
  <head>
    <%- include('modules/head') -%>
  </head>

  <body class="c-app">
    <%- include('modules/sidebar') -%>

    <div class="c-wrapper c-fixed-components">
      <%- include('modules/header') -%>

      <div class="c-body">
        <main class="c-main">
          <div class="container-fluid">
            <div class="fade-in">
              <!-- /.row-->
              <div class="row">
                <div class="col-md-12">
                  <div class="card">
                    <div class="card-header">Trace</div>
                    <div class="card-body">
                      <div class="col-12">
                        <div class="row">
                          <p>start</p>
                          <form action="trace-start" method="POST">
                            <% for( let i = 0; i < nodes.length; i++ ) { %>
                            <input type="checkbox" name="<%= nodes[i]['node_id'] %>" />
                            <label for="<%= nodes[i]['node_id'] %>"> <%= nodes[i]['node_id'] %> </label>
                            <% } %>
                            <input type="submit" value="start" />
                          </form>
                        </div>
                        <div class="row">
                          <p>stop</p>
                          <form action="trace-stop" method="POST">
                            <% for( let i = 0; i < nodes.length; i++ ) { %>
                            <input type="checkbox" name="<%= nodes[i]['node_id'] %>" />
                            <label for="<%= nodes[i]['node_id'] %>"> <%= nodes[i]['node_id'] %> </label>
                            <% } %>
                            <input type="submit" value="stop" />
                          </form>
                        </div>
                      </div>
                      <!-- /.row-->
                      <div class="row col-12">
                        <table class="table table-responsive-sm table-outline mb-0">
                          <thead class="thead-light">
                            <tr>
                              <th>Count</th>
                              <th>Trace ID</th>
                              <th>Node ID</th>
                              <th>start on boot</th>
                              <th>interval</th>
                              <th>dest</th>
                              <th>depth</th>
                              <th>submit</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for( let i = 0; i < trace.length; i++ ) { %>
                            <tr>
                              <form action="trace" method="POST">
                                <input value="<%= trace[i]["trace_id"] %>" name="trace-id" hidden>
                                <td><%= i+1 %></td>
                                <td><%= trace[i]["trace_id"] %></td>
                                <td><input value="<%= trace[i]["node_id"] %>" name="node-id" placeholder="node-id"></td>
                                <td>
                                  <select type="number" name="trace-start" placeholder="start on boot">
                                    <option <% if (trace[i]["start_on_boot"]) { %>selected="selected"<% } %>>1</option>
                                    <option <% if (!trace[i]["start_on_boot"]) { %>selected="selected"<% } %>>0</option>
                                  </select>
                                </td>
                                <td>
                                  <input value="<%= trace[i]["interval"] %>" name="trace-interval" placeholder="trace
                                  interval">
                                </td>
                                <td>
                                  <input value="<%= trace[i]["dest"] %>" name="trace-dest" placeholder="trace dest">
                                </td>
                                <td>
                                  <input value="<%= trace[i]["depth"] %>" name="trace-depth" placeholder="trace depth">
                                </td>
                                <td><input type="submit" /></td>
                              </form>
                            </tr>
                            <% } %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.col-->
              </div>
              <!-- /.row-->
            </div>
          </div>
        </main>

        <%- include('modules/footer') -%>
      </div>
    </div>

    <!-- CoreUI and necessary plugins-->
    <script src="vendors/@coreui/coreui/js/coreui.bundle.min.js"></script>
    <!--[if IE]><!-->
    <script src="vendors/@coreui/icons/js/svgxuse.min.js"></script>
    <!--<![endif]-->
    <!-- Plugins and scripts required by this view-->
    <script src="vendors/@coreui/chartjs/js/coreui-chartjs.bundle.js"></script>
    <script src="vendors/@coreui/utils/js/coreui-utils.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
